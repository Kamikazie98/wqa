<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Trust the Let's Encrypt ISRG Root X1 cert for our API domain to avoid TLS issues on older devices -->
    <domain-config cleartextTrafficPermitted="false">
        <domain includeSubdomains="true">morvism.ir</domain>
        <trust-anchors>
            <certificates src="@raw/isrg_root_x1" />
            <certificates src="system" />
            <certificates src="user" />
        </trust-anchors>
    </domain-config>
</network-security-config>
